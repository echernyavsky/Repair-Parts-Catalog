@using System.Threading.Tasks
@using Newtonsoft.Json
@model RepairPartsCatalog.Business.ViewModels.CountryTableViewModel
   
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Country List";
}

<table class="table table-striped table-hover" id="countryTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Code</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Countries">
        <tr>
            <td data-bind="text: Id"></td>
            <td data-bind="text: Code"></td>
            <td data-bind="text: Name"></td>
        </tr>
    </tbody>
</table>

@section scripts {
    <script type="text/javascript" src="~/js/view-models/country/countryViewModel.js"></script>
    <script type="text/javascript" src="~/js/view-models/country/countryTableViewModel.js"></script>
    <script type="text/javascript">
        var countryTable = new CountryTableViewModel(@Html.Raw(JsonConvert.SerializeObject(Model)));
        ko.applyBindings(countryTable, $('#countryTable').get(0));
    </script>
}